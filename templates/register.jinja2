{% extends "layout.jinja2" %}

{% block title %}
Checkers history
{% endblock %}

{% block style %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <link rel="stylesheet" href="{{ url_for('static', filename='dist/choose_game.css') }}">
{% endblock %}

{% block content %}
    <div class="form gridContainer gridContainer--withCenter">
        <h2 class="title">Register</h2>
        <div class="form-outer gridContainer--center">
            <form method="post" action="" class="form">
                <label for="login" class="form__label">
                    Login
                </label>
                <input name="login" type="text" class="form__input" value="{{ login }}">

                <label for="password" class="form__label">
                    Password
                </label>
                <input name="password" type="password" class="form__input" value="{{ password }}">

                <label for="password" class="form__label">
                    Confirm password
                </label>
                <input name="password_confirm" type="password" class="form__input">

                <div for="captcha" class="form_captcha">
                    Captcha
                    <div class="g-recaptcha" data-sitekey="6LfQTqIUAAAAAIfhQoSqnZMB3RJytcvrA7Lr3_Xr"/>
                </div>
                <input type="submit" class="form_submit" value="register">
            </form>
        </div>
    </div>
{% endblock %}

{% block scripts %}
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="{{url_for('static', filename='dist/captcha.js')}}"></script>
{% endblock %}
